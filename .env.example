# Codialog - Przykładowa konfiguracja środowiska
# Skopiuj ten plik do .env i dostosuj wartości do swoich potrzeb

# API Keys
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://codialog:password@localhost:5432/codialog
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
DB_NAME=codialog
DB_USER=codialog
DB_PASSWORD=password

# Bitwarden Configuration
BITWARDEN_SERVER=http://localhost:8080
BITWARDEN_CLI_SERVER=http://localhost:8087
BITWARDEN_ADMIN_TOKEN=your_bitwarden_admin_token_here
# For production, use a strong random token:
# openssl rand -base64 48

# Application Settings
RUST_LOG=info
NODE_ENV=development
API_PORT=4000
FRONTEND_PORT=1420

# TagUI Configuration
TAGUI_PATH=./tagui
CHROME_PATH=/usr/bin/google-chrome
HEADLESS_MODE=true

# Security Settings
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
# Session Settings
SESSION_TIMEOUT_HOURS=24
SESSION_CLEANUP_INTERVAL_MINUTES=60
# Bitwarden Security
BITWARDEN_VAULT_TIMEOUT_MINUTES=15
AUTO_LOCK_VAULT=true

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB
ALLOWED_EXTENSIONS=.pdf,.doc,.docx

# Monitoring & Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info
LOG_FILE=./logs/codialog.log

# Development Settings
DEBUG=true
HOT_RELOAD=true
CORS_ENABLED=true

# Docker Volumes (persistent data storage)
DATA_DIR=./data
UPLOADS_DIR=./data/uploads
LOGS_DIR=./data/logs
SESSIONS_DIR=./data/sessions

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

# Performance Settings
MAX_CONCURRENT_SESSIONS=100
FILE_UPLOAD_MAX_SIZE_MB=50
DSL_CACHE_TTL_MINUTES=30
