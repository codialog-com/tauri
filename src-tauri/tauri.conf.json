{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Codialog",
  "version": "0.1.0",
  "identifier": "com.codialog.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "title": "Codialog - Automatyzacja CV",
        "width": 900,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "execute": {
        "sidecar": true,
        "command": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
